@model IEnumerable<CollegeManagementSystem.Models.Entities.Student>

@{
    Layout = "_Layout";
    ViewData["Title"] = "GetAll";
}

<h1>Students</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradeYear)
            </th>
            <th class="text-center">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeYear.Title)
            </td>
            <td class="text-center">
                <a asp-action="StudentDetails" asp-route-id="@item.StudentId" class="btn btn-info">Details</a> |
                <a asp-action="DeleteStudent" asp-controller="Student" asp-route-id="@item.StudentId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
